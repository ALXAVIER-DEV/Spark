void cadastro(){
    static int linha;
    do{
    
        printf("\nFa√ßa seu cadastro: ");
        printf("\nDigite seu Nome: ");
        scanf("%s" , &Nome[linha]);
        printf("\nDigite seu e-mail: ");
        scanf("%s" , &email[linha]);
        printf("\nDigite seu CPF: ");
        scanf("%s" , &cpf[linha]);
        printf("\n Digite 1 para continuar ou 0 para sair: \n");
        scanf("%d ,&opcao");
        linha++;
        }while(opcao==1);
}
